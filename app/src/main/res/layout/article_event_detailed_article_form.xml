<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/ArticleEventDetailedForm_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.entrypointAnonymousUser.AnonymousUserNavDetailedArticleForm">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ArticleEventDetailedForm_root_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ArticleEventDetailedForm_root_constraint_featuredImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ArticleEventDetailedForm_root_constraint_category"

            android:scaleType="center"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/ArticleEventDetailedForm_root_constraint_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ArticleEventDetailedForm_root_constraint_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ArticleEventDetailedForm_root_constraint_featuredImage" />

        <TextView
            android:id="@+id/ArticleEventDetailedForm_root_constraint_publishedDatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="published datetime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ArticleEventDetailedForm_root_constraint_title" />

        <TextView
            android:id="@+id/ArticleEventDetailedForm_root_constraint_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="author"
            app:layout_constraintBottom_toBottomOf="@+id/ArticleEventDetailedForm_root_constraint_publishedDatetime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ArticleEventDetailedForm_root_constraint_publishedDatetime" />

        <TextView
            android:id="@+id/ArticleEventDetailedForm_root_constraint_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ArticleEventDetailedForm_root_constraint_publishedDatetime" />

        <TextView
            android:id="@+id/ArticleEventDetailedForm_root_constraint_lastEditedDatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:text="last edited datetime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ArticleEventDetailedForm_root_constraint_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ArticleEventDetailedForm_root_constraint_comments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ArticleEventDetailedForm_root_constraint_lastEditedDatetime" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>